<Window x:Class="WpfApplication1.Products"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="Customers" Height="340" Width="230">
    <Grid Margin="0,0,0,0">
        <TextBox x:Name="txtSearch" HorizontalAlignment="Right" Height="25" Margin="0,10,10,0" TextWrapping="Wrap" Text="Search" VerticalAlignment="Top" Width="165"/>
        <ListBox x:Name="listBox" HorizontalAlignment="Center" Margin="0,45,0,35" Width="200" SelectionChanged="listBox_SelectionChanged"/>
        <Button x:Name="btnAdd" Content="Add" HorizontalAlignment="Center" Margin="0,0,0,7" VerticalAlignment="Bottom" Width="100"/>
        <Button x:Name="btnBack" Content="back" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="30" Height="25"/>
    </Grid>
</Window>
